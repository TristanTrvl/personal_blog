---
export interface Props {
	date: string;
}

const { date } = Astro.props;
const dateObj = new Date(date)
---

<time datetime={dateObj.toISOString()}>
  {
      dateObj.toLocaleDateString("en-us", {
          year: "numeric",
          month: "long",
          day: "numeric"
      })
  }
</time>