---
interface Props {
	items: {
		name: string;
		url: string;
	}[];
}

const { items } = Astro.props;
---

<nav class="hidden md:inline-block">
  <h2 class="sr-only">Navigation</h2>
  <ul role='list'>
    {
      items.map((item) => (
        <li>
          <a href={item.url} title={`Go to ${item.name}`}> {item.name}</a>
        </li>
      ))
    }
  </ul>
</nav>