---
import "../styles/global.css";

import Head from "@components/layout/Head.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";

export interface Props {
	title: string;
	description: string;
	classList?: string;
	pageTitle?: string;
	socialImg?: URL;
}

const { title, description, classList, pageTitle, socialImg } = Astro.props;
---

<html lang="en">
  <Head title={title} description={description} socialImg={socialImg} />
	<body class:list={[classList]}>
		<a class="skip-to-content-link" href="#main">Skip to content</a>
    <Header pageTitle={pageTitle} transition:persist />
		<slot />
    <Footer transition:persist />
	</body> 
</html>